<Configuration status="WARN">
  <Appenders>
    <!-- <File name="FILE" fileName="/path/to/log/file.log"> -->
    <File name="FILE" fileName="melody-master-back-end/logs/application.log">
      <PatternLayout>
        <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="FILE" />
    </Root>
  </Loggers>
</Configuration>